@model ShopCartViewModel
<div class="container">
    @foreach (var cartItem in Model.ShopCart.CartItems)
    {
        <div class="alert alert-warning mt-3">  
            <b>Car: </b>@cartItem.Car.Name<br/>
            <b>Price: </b>@cartItem.Car.Price.ToString("c")
        </div>
    }
    <hr/>
    <a class="btn btn-danger" asp-controller="Order" asp-action="Checkout">Buy</a>
</div>